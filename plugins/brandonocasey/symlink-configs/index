#!/usr/bin/env bash

current_plugin_dir="$1"; shift
dotfiles_dir="$1"; shift
if [ ! -d "$dotfiles_dir" ]; then
	exit 1
fi

cat <<EOF
while read -r target; do
	link_name="\$HOME/.\$(basename "\${target%.*}")"
	(ln -snf "\$target" "\$link_name" &)
done <<< "\$(find "$dotfiles_dir" -name '*.syml' -not -type l)"
EOF
