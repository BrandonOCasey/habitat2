#!/usr/bin/env bash

if [ ! -f "$1" ] || [ ! -f "$2" ]; then
  echo "Please supply two files"
  return
fi

FILE1="$1"
FILE2="$2"

FILE1_SIZE="$(file-size "$FILE1")"
FILE2_SIZE="$(file-size "$FILE2")"

if [ "$FILE1_SIZE" -gt "$FILE2_SIZE" ]; then
  echo "File 1 is bigger by $((FILE1_SIZE-FILE2_SIZE))b"
else
  echo "File 2 is bigger by $((FILE2_SIZE-FILE1_SIZE))b"
fi
